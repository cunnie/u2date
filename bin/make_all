#!/bin/bash
#
# Build binaries for macOS, Windows, Linux, FreeBSD
#
export GOOS GOARCH
for GOOS in darwin linux freebsd; do
  for GOARCH in amd64; do
    go build -o $GOPATH/bin/u2date-$GOOS-$GOARCH u2date/main.go
  done
done

# Windows has a custom extension
GOOS=windows GOARCH=amd64
go build -o $GOPATH/bin/u2date-$GOOS-$GOARCH.exe u2date/main.go
